{% extends '::base.html.twig' %}
{% block title %}Factura{% endblock %}
{% block active3 %}class="active"{% endblock active3 %}
{% block body %}
    {% for flashMessage in app.session.flashbag.get('credencial') %}
        <script>
            window.onload = function error(){
                alertify.error("{{ flashMessage }}.");
                return false;
            }
        </script>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('exito') %}
        <script>
            window.onload = function notificacion(){
                alertify.log("{{ flashMessage }}.");
                return false;
            }
        </script>
    {% endfor %}
<div class="content">
    <div class="container" style="height: auto;">
        <h1>Lista a Comprar</h1>

        <hr/>
        <table class="table table-bordered">
            <tbody>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>SubTotal</th>
            <th>Total</th>
            </tbody>
            {% for car in car %}
                <tr>
                    <td>{{ car.producto }}</td>
                    <td>{{ car.producto }}</td>
                    <td>{{ car.cantidad }}</td>
                    <td>$ {{ car.precio }}</td>
                    <td>$ {{ car.total }}</td>
                </tr>
            {% endfor %}

        </table>
        <a href="{{ path('pdf') }}" title="Agregar" class="pull-left btn btn-danger" >Generar Factura </a>

        <a href="{{ path('venta') }}" title="Agregar" class="pull-right btn btn-success">Finalizar Compra</a>
    </div>
</div>
<hr>
{% endblock body %}
