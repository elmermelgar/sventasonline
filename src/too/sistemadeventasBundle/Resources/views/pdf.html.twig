{% extends 'fbase.html.twig' %}
{% block stylesheets %}
    <link href="file:///c:/xampp/htdocs/ceniues/web/libs/AdminLTE-2.2.0/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
{% endblock %}
{% block body %}
    <div class="container">
        <section class="content">
            <div class="row">
                <div class="col-sm-10">
                    <div class="box">
                        <h1 class="text-center">Tienda de Electrodomesticos  NTN</h1>
                        <!--Inicia Cabecera de tabla-->
                        <h2 class="page-header">
                            <img src="file:///c:/xampp/htdocs/sventas/web/images/logo.png">
                            <i class="fa fa-globe"></i> Facturacion de articulos
                        </h2>
                        <small class="pull-left">Cliente: Fernando Bolanos </small>
                        <small class="pull-right">Fecha: {{ hora }}</small>
                        <!--Finaliza Cabecera de tabla-->

                        <!--Inicia cuerpo de tabla-->
                        <div class="box-body table-responsive">
                            <table border=1 cellspacing=0 cellpadding=10 bordercolor="000000" class="table table-hover">
                                <thead>
                                <th>Producto</th>
                                <th>Precio</th>
                                <th>Cantidad</th>
                                <th>SubTotal</th>
                                </thead>
                                <tbody>
                                {% for car in car %}
                                <tr>
                                    <td>{{ car.producto }}</td>
                                    <td>{{ car.producto }}</td>
                                    <td>{{ car.precio }}</td>
                                    <td>{{ car.cantidad }}</td>
                                    <td>{{ car.total }}</td>
                                </tr>
                                </tbody>
                                </tbody>
                                {% endfor %}
                            </table>
                            <h5 class="pull-right">        Precio de articulos {{ total }}</h5>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}